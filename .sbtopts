# SBT-specific options
-J-Xmx4G
-J-Xms1G
-J-XX:MetaspaceSize=512M
-J-XX:MaxMetaspaceSize=1G
-J-XX:+UseG1GC
-J-XX:+UseStringDeduplication
-J-XX:ReservedCodeCacheSize=256M

# Enable SBT optimizations
-Dsbt.turbo=true
-Dsbt.task.timings=true
-Dsbt.task.timings.on.shutdown=true

# Reduce memory pressure
-Dsbt.classloader.close=true
-Dsbt.server.autostart=false

# Improve incremental compilation
-Dsbt.zinc.cache.limit=200

# Java 21 compatibility
-J--add-opens=java.base/java.lang=ALL-UNNAMED
-J--add-opens=java.base/java.util=ALL-UNNAMED
-J--add-opens=java.base/sun.nio.ch=ALL-UNNAMED 